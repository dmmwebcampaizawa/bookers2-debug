  <% book.book_comments.each do |book_comment| %>
    <div>
      <%= image_tag book_comment.user.get_profile_image, size:"100x100" %>
      <%= book_comment.comment %>
      <% if book_comment.user == current_user %>
        <%= link_to 'Destroy', book_book_comment_path(book.id, book_comment.id), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%>
      <% end %>
      <br>
      <%= link_to book_comment.user do %>
        <%= book_comment.user.name %>
      <% end %>
    </div>
  <% end %>